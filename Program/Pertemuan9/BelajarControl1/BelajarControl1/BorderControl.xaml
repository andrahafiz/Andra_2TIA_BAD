<Window x:Class="BelajarControl1.BorderControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BelajarControl1"
        mc:Ignorable="d"
        Title="BorderControl" Height="175" Width="200">
    <Grid Margin="10">
        <Border BorderBrush="NavajoWhite" BorderThickness="1,3,1,5">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="LightCyan"
                                  Offset="0.0"/>
                    <GradientStop Color="LightBlue"
                                  Offset="0.5"/>
                    <GradientStop Color="DarkTurquoise"
                                  Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Margin="10">
                <Button>Tombol 1</Button>
                <Button Margin="0,10">Tombol 2</Button>
                <Button >Tombol 3</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
