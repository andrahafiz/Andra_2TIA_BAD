        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContexMenu"
        mc:Ignorable="d"
        Title="MenuContext" Height="300" Width="300">
    <Window.Resources>
        <ContextMenu x:Key="cmTombol">
            <MenuItem Header="Pilih Menu 1"/>
            <MenuItem Header="Pilih Menu 2"/>
            <Separator/>
            <MenuItem Header="Pilih Menu 3"/>
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <Button Content="Tekan disini" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Tombol_Click"/>
    </Grid>
